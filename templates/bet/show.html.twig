{% extends 'base.html.twig' %}

{% block title %}Bet{% endblock %}

{% block body %}
    <h1>Bet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bet.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ bet.amount }}</td>
            </tr>
            <tr>
                <th>Odd</th>
